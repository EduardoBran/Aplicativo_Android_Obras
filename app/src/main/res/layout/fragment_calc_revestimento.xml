<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCalc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculo.CalcRevestimentoFragment"
    tools:ignore="TooManyViews">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationContentDescription="Voltar"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/calc_title"
        app:titleCentered="true"
        app:titleTextColor="@color/white" />

    <!-- ConteÃºdo CENTRALIZADO -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:id="@+id/contentColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="0dp">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@android:anim/fade_in"
                android:measureAllChildren="false"
                android:outAnimation="@android:anim/fade_out"
                tools:ignore="UselessParent">

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 0 â€“ Abertura -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_open_title"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/calc_open_msg"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/generic_start"
                            android:textSize="@dimen/calc_btn_normal_text" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/generic_cancel"
                            android:textSize="@dimen/calc_btn_normal_text" />
                    </LinearLayout>
                </LinearLayout>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 1 â€“ Tipo de Revestimento -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_step1_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <RadioGroup
                        android:id="@+id/rgRevest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPiso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_piso" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbAzulejo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_azulejo" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPastilha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_pastilha" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbPedra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_pedra" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbMarmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_marmore" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbGranito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_opt_granito" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/groupPlacaTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/calc_step1_placa_tipo"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rgPlacaTipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbCeramica"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calc_step4_placa_ceramica" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbPorcelanato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="@string/calc_step4_placa_porcelanato" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 2 â€“ Ambiente -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_step2_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <RadioGroup
                        android:id="@+id/rgAmbiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbSeco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step2_opt_seco" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbSemi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step2_opt_semi" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbMolhado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step2_opt_molhado" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbSempre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step2_opt_sempre" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvObsAc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/calc_step2_obs_porcelanato_ac3"
                        android:textColor="?attr/colorPrimary"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 3 â€“ Medidas -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_step3_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilComp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/calc_step3_comp"
                        app:helperText="Em metros â€¢ Ex: 5,50"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etComp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLarg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/calc_step3_larg"
                        app:helperText="Em metros â€¢ Ex: 3,20"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLarg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAltura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/calc_step3_alt"
                        android:visibility="gone"
                        app:helperText="Em metros â€¢ Ex: 2,80"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/calc_step3_or"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="italic" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAreaInformada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/calc_step3_area_total"
                        app:helperText="Em mÂ² â€¢ Ex: 17,60"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAreaInformada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />

                        <TextView
                            android:id="@+id/tvAreaTotalAviso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/text_area_total_aviso"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/warning"
                            android:visibility="gone" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 4 â€“ ParÃ¢metros da PeÃ§a -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_step4_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <LinearLayout
                        android:id="@+id/groupPecaTamanho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPecaComp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/calc_step4_peca_comp"
                            app:helperText="Em centÃ­metros â€¢ Ex: 30"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPecaComp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789,."
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPecaLarg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/calc_step4_peca_larg"
                            app:helperText="Em centÃ­metros â€¢ Ex: 30"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPecaLarg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789,."
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPecaEsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/calc_step4_peca_esp"
                            app:helperText="Em milÃ­metros â€¢ Ex: 8 (opcional)"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPecaEsp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789,."
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPecasPorCaixa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/calc_step4_pecas_caixa"
                            app:helperText="Opcional â€¢ Ex: 4 peÃ§as"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPecasPorCaixa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilJunta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/calc_step4_junta"
                        app:helperText="Em milÃ­metros â€¢ Ex: 3"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJunta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSobra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/calc_step4_sobra"
                        app:helperText="Em porcentagem â€¢ Ex: 10"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSobra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789,."
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- TELA 5 â€“ RodapÃ© -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_step5_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchRodape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/calc_step5_include" />

                    <LinearLayout
                        android:id="@+id/groupRodapeFields"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRodapeAltura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/calc_step5_altura"
                            app:helperText="Em centÃ­metros â€¢ Ex: 7"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRodapeAltura"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789,."
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/calc_step5_material"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                        <RadioGroup
                            android:id="@+id/rgRodapeMat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbRodapeMesma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/calc_step5_mat_mesma" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbRodapePeca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="@string/calc_step5_mat_pronta" />
                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRodapeCompComercial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/hint_comprimento_peca_pronta"
                            android:visibility="gone"
                            app:helperText="Em metros â€¢ Ex: 0,60 (padrÃ£o), 1,00, 2,00"
                            app:helperTextEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRodapeCompComercial"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789,."
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

