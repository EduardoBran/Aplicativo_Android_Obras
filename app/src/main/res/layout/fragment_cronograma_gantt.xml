<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarGantt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_cronograma_gantt"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/gantt_title"
        app:titleCentered="true" />

    <!-- Cabeçalho com rótulos por dia (scroll horizontal) -->
    <HorizontalScrollView
        android:id="@+id/headerScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp" />
    </HorizontalScrollView>

    <!-- Recycler com as linhas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGantt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerScroll"
        tools:listitem="@layout/item_gantt_row" />

    <!-- Loading -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressGantt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt"
        tools:visibility="visible" />

    <!-- Vazio -->
    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gantt_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt" />

    <!-- Container para controlar visibilidade do cabeçalho -->
    <View
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rvGantt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt" />

    <!-- ============ ABA (FIXA): Resumo Cronogramas ============ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResumoGantt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabeçalho (clicável) -->
            <LinearLayout
                android:id="@+id/headerResumoGantt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:accessibilityHeading="true"
                    android:text="@string/crg_footer_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge" />

                <ImageView
                    android:id="@+id/ivArrowResumoGantt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/expandir"
                    android:importantForAccessibility="no"
                    android:rotation="0"
                    android:src="@drawable/ic_expand_more" />
            </LinearLayout>

            <!-- CONTEÚDO (colapsado por padrão) -->
            <LinearLayout
                android:id="@+id/contentResumoGantt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Seção: Andamento da Obra -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/crg_footer_andamento_title"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAndamentoObraGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto"
                            android:fontFeatureSettings="tnum"
                            android:letterSpacing="0"
                            android:text="@string/crg_footer_status_placeholder"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Financeiro -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvFinanceiroHeaderGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/crg_footer_financeiro_title"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <!-- Saldo Inicial -->
                        <TextView
                            android:id="@+id/tvSaldoInicialGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto"
                            android:fontFeatureSettings="tnum"
                            android:letterSpacing="0"
                            android:text="@string/crg_footer_saldo_inicial_mask"
                            android:textSize="16sp" />

                        <!-- Saldo com Aportes -->
                        <TextView
                            android:id="@+id/tvSaldoComAportesGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/roboto"
                            android:fontFeatureSettings="tnum"
                            android:letterSpacing="0"
                            android:text='@string/crg_footer_saldo_aporte_mask'
                            android:textSize="16sp" />

                        <!-- NOVO: Valor Total (somatório dos valores de todas as etapas) -->
                        <TextView
                            android:id="@+id/tvValorTotalGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto"
                            android:fontFeatureSettings="tnum"
                            android:letterSpacing="0"
                            android:text='@string/crg_footer_valor_total_mask'
                            android:textSize="16sp" />

                        <!-- Saldo Restante -->
                        <TextView
                            android:id="@+id/tvSaldoRestanteGantt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto"
                            android:fontFeatureSettings="tnum"
                            android:letterSpacing="0"
                            android:text='@string/crg_footer_saldo_restante_mask'
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>