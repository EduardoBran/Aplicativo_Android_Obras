<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarGantt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_cronograma_gantt"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/gantt_title"
        app:titleCentered="true" />

    <!-- Cabeçalho com rótulos por dia (scroll horizontal) -->
    <HorizontalScrollView
        android:id="@+id/headerScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:fadingEdgeLength="0dp"
        android:fillViewport="false"
        android:overScrollMode="never"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp" />
    </HorizontalScrollView>

    <!-- Recycler com as linhas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGantt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="5.75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerScroll"
        tools:listitem="@layout/item_gantt_row" />

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressGantt"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt"
        tools:visibility="visible" />

    <!-- Vazio -->
    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gantt_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt" />

    <!-- Container para controlar visibilidade do cabeçalho -->
    <View
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rvGantt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarGantt" />

    <!-- ============ ABA (FIXA): Resumo Cronogramas ============ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResumoGantt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabeçalho (clicável) -->
            <LinearLayout
                android:id="@+id/headerResumoGantt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:accessibilityHeading="true"
                    android:text="@string/crg_footer_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge" />

                <ImageView
                    android:id="@+id/ivArrowResumoGantt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/expandir"
                    android:importantForAccessibility="no"
                    android:rotation="0"
                    android:src="@drawable/ic_expand_more" />
            </LinearLayout>

            <!-- CONTEÚDO (colapsado por padrão) -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/contentResumoGantt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Conteúdo real da aba -->
                <LinearLayout
                    android:id="@+id/contentResumoInner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Seção: Andamento da Obra -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/crg_footer_andamento_title"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvAndamentoObraGantt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/roboto"
                                android:fontFeatureSettings="tnum"
                                android:letterSpacing="0"
                                android:text="@string/crg_footer_status_placeholder"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- NOVO: barra de progresso animada -->
                            <com.luizeduardobrandao.obra.ui.cronograma.gantt.anim.PercentBarView
                                android:id="@+id/progressStatusBar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_status_height"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="4dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Financeiro -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvFinanceiroHeaderGantt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/crg_footer_financeiro_title"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <!-- Saldo Inicial -->
                            <TextView
                                android:id="@+id/tvSaldoInicialGantt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/roboto"
                                android:fontFeatureSettings="tnum"
                                android:letterSpacing="0"
                                android:text="@string/crg_footer_saldo_inicial_mask"
                                android:textSize="16sp" />

                            <!-- Saldo com Aportes -->
                            <TextView
                                android:id="@+id/tvSaldoComAportesGantt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto"
                                android:fontFeatureSettings="tnum"
                                android:letterSpacing="0"
                                android:text='@string/crg_footer_saldo_aporte_mask'
                                android:textSize="16sp" />

                            <!-- DIVIDER entre 'Saldo com Aporte(s)' e 'Total (Integral)' -->
                            <com.google.android.material.divider.MaterialDivider
                                android:id="@+id/divider_after_aportes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                app:dividerInsetEnd="0dp"
                                app:dividerInsetStart="0dp"
                                app:dividerThickness="1dp" />

                            <!-- Valor Total Integral (linha com ícone à direita) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvValorTotalIntegralGantt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto"
                                    android:fontFeatureSettings="tnum"
                                    android:letterSpacing="0"
                                    android:text="@string/crg_footer_valor_total_integral_mask"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/ivInfoIntegral"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="6dp"
                                    android:contentDescription="@string/info"
                                    android:src="@drawable/ic_info2"
                                    app:tint="@color/icon_info_recycler" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvValorTotalIntegralExplicacaoGantt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/crg_footer_valor_total_integral_exp"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <!-- Valor Total Sem Duplicadas (linha com ícone à direita) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvValorTotalSemDuplaGantt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto"
                                    android:fontFeatureSettings="tnum"
                                    android:letterSpacing="0"
                                    android:text="@string/crg_footer_valor_total_sem_dupla_mask"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/ivInfoSemDupla"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="6dp"
                                    android:contentDescription="@string/info"
                                    android:src="@drawable/ic_info2"
                                    app:tint="@color/icon_info_recycler" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvValorTotalSemDuplaExplicacaoGantt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/crg_footer_valor_total_sem_dupla_exp"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <!-- DIVIDER entre 'Total (Sem Duplicatas)' e 'Saldo Restante' -->
                            <com.google.android.material.divider.MaterialDivider
                                android:id="@+id/divider_before_saldo_restante"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="18dp"
                                app:dividerInsetEnd="0dp"
                                app:dividerInsetStart="0dp"
                                app:dividerThickness="1dp" />

                            <!-- Saldo Restante (linha com ícone à direita) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvSaldoRestanteGantt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto"
                                    android:fontFeatureSettings="tnum"
                                    android:letterSpacing="0"
                                    android:text='@string/crg_footer_saldo_restante_mask'
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/ivInfoSaldo"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="6dp"
                                    android:contentDescription="@string/info"
                                    android:src="@drawable/ic_info2"
                                    app:tint="@color/icon_info_recycler" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvSaldoRestanteExpGantt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0"
                                android:text="@string/crg_footer_saldo_restante_exp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>