<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEtapaReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/etapa_reg_title"
        app:titleCentered="true" />

    <!-- Formulário rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/cronRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarEtapaReg">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título da Etapa -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTituloEtapa"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etapa_reg_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTituloEtapa"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Erro do Título (fora do TIL, controla o espaçamento) -->
            <TextView
                android:id="@+id/tvTituloError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/etapa_error_title_required"
                tools:visibility="visible" />

            <!-- Descrição (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescricaoCronograma"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:hint="@string/etapa_reg_desc_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescEtapa"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_summary"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Título "Responsável" -->
            <TextView
                android:id="@+id/tvResponsavelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/etapa_reg_responsavel_title"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- RadioGroup Responsável -->
            <RadioGroup
                android:id="@+id/rgResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbRespFuncs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/etapa_reg_responsavel_func"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbRespEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/etapa_reg_responsavel_empresa"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Erro do Responsável (fora do TIL) -->
            <TextView
                android:id="@+id/tvResponsavelError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/etapa_error_responsavel_required"
                tools:visibility="gone" />

            <!-- MaterialAlertDialogBuilder de Funcionários -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFuncionarios"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/cron_func_dropdown_hint"
                android:visibility="gone"
                app:endIconContentDescription="@string/cron_func_dropdown_hint"
                app:endIconDrawable="@drawable/ic_checklist"
                app:endIconMode="custom"
                app:endIconTint="@color/md_theme_light_onSurfaceVariant"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/md_theme_light_onSurfaceVariant">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/dropdownFuncionarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Funcionários selecionados (aparece só quando houver seleção) -->
            <TextView
                android:id="@+id/tvFuncionariosSelecionados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/md_theme_light_onSurface"
                android:visibility="gone"
                tools:text="Funcionários: João, Maria."
                tools:visibility="gone" />

            <!-- Campo Empresa (visível apenas quando Responsável = Empresa) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmpresa"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/etapa_reg_empresa_hint"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmpresa"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_business"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Erro da Empresa (fora do TIL) -->
            <TextView
                android:id="@+id/tvEmpresaError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/etapa_error_empresa_required"
                tools:visibility="gone" />

            <!-- Valor da Empresa (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmpresaValor"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/etapa_reg_empresa_valor_hint"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmpresaValor"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Informação sobre o valor (negrito em Resumo e Notas) -->
            <TextView
                android:id="@+id/tvEmpresaValorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:visibility="gone"
                tools:text="@string/etapa_reg_empresa_valor_info"
                tools:visibility="visible" />

            <!-- Data de Início -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataInicioEtapa"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/etapa_reg_date_start_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataInicioEtapa"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Erro da Data de Início (fora do TIL, controla o espaçamento) -->
            <TextView
                android:id="@+id/tvDataInicioError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/etapa_error_date_start_required"
                tools:visibility="visible" />

            <!-- Data de Término -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataFimEtapa"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/etapa_reg_date_end_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataFimEtapa"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Erro da Data de Término (fora do TIL, controla o espaçamento) -->
            <TextView
                android:id="@+id/tvDataFimError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/etapa_error_date_end_required"
                tools:visibility="visible" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/etapa_reg_status"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rgStatusEtapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatPend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cron_tab_pending"
                    android:textSize="12sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatAnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/cron_tab_progress"
                    android:textSize="12sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatConcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/cron_tab_done"
                    android:textSize="12sp" />
            </RadioGroup>

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveEtapa"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/generic_add" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSaveEtapa"
                style="?attr/linearProgressIndicatorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indeterminateAnimationType="disjoint"
                app:trackCornerRadius="8dp"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>