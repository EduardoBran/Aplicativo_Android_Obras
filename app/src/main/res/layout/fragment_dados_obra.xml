<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarDadosObra"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:titleCentered="true" />

    <!-- Progress (mostra primeiro) -->
    <ProgressBar
        android:id="@+id/progressDadosObra"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarDadosObra" />

    <!-- Conteúdo rolável (oculto até carregar) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollDadosObra"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarDadosObra"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome do Cliente -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeCliente"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:hint="@string/obra_data_client_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Endereço -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEnderecoObra"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEnderecoObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="12dp"
                    android:hint="@string/obra_data_address_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contato -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContatoObra"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContatoObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_contact"
                    android:drawablePadding="12dp"
                    android:hint="@string/obra_data_contact_hint"
                    android:inputType="textEmailAddress|phone"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descrição -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescricao"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescricaoObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_summary"
                    android:drawablePadding="12dp"
                    android:hint="@string/obra_data_desc_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Saldo Inicial (só leitura) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obra_data_balance_initial_label"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSaldoInicialValor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    tools:text="R$ 0,00" />
            </LinearLayout>

            <!-- Saldo com aporte (mostra só se houver aporte) -->
            <LinearLayout
                android:id="@+id/llSaldoComAportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSaldoAporteLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obra_data_balance_with_aportes_label"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSaldoComAportesValor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    tools:text="—" />
            </LinearLayout>

            <!-- ───── APORTES: ação + card (NOVO) ───── -->

            <!-- Botão para abrir o card de novo aporte -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdicionarAporte"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/aporte_button_add"
                android:textSize="16sp" />

            <!-- Card de cadastro de aporte (inicia oculto) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNovoAporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Valor do aporte (obrigatório) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAporteValor"
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/aporte_value_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAporteValor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789.,"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="12dp"
                            android:inputType="numberDecimal|number"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Data do aporte (obrigatória) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAporteData"
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/aporte_date_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAporteData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_schedule"
                            android:drawablePadding="12dp"
                            android:focusable="false"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Descrição (opcional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAporteDescricao"
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/aporte_desc_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAporteDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_summary"
                            android:drawablePadding="12dp"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ações do card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSalvarAporte"
                            style="@style/Widget.ObrasApp.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:enabled="false"
                            android:text="@string/adicionar"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelarAporte"
                            style="@style/Widget.ObrasApp.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_cancel"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- ───── FIM APORTES ───── -->

            <!-- Data Início -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataInicioObra"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataInicioObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:hint="@string/obra_data_date_start_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Data Término -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataFimObra"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataFimObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:hint="@string/obra_data_date_end_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botões Salvar | Excluir -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSalvarObra"
                    style="@style/Widget.ObrasApp.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/generic_save"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExcluirObra"
                    style="@style/Widget.ObrasApp.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/obra_data_button_delete"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSaveObra"
                style="?attr/linearProgressIndicatorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indeterminateAnimationType="disjoint"
                app:trackCornerRadius="8dp"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
