<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarExportSummary"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/export_summary_title"
        app:titleCentered="true"
        tools:menu="@menu/menu_export_summary" />

    <!-- Progress central -->
    <ProgressBar
        android:id="@+id/progressExportSummary"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <!-- Conteúdo rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollExportSummary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarExportSummary"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/containerExportSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="0dp"
            android:orientation="vertical"
            android:showDividers="none">

            <!-- Cabeçalho: Nome da Obra -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/tvObraName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold"
                        tools:text="Nome da Obra: Condomínio Vista Bela" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Informações da Obra -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_info"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="Nome do cliente: João Silva" />

                    <TextView
                        android:id="@+id/tvEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        tools:text="Endereço da obra: Rua das Flores, 123, Centro – Salvador/BA" />

                    <TextView
                        android:id="@+id/tvContato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        tools:text="Contato: (71) 99999-9999" />

                    <TextView
                        android:id="@+id/tvDescricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        tools:text="Descrição da obra: Reforma completa da cobertura e áreas comuns." />

                    <TextView
                        android:id="@+id/tvDataInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="italic"
                        tools:text="Data de Início: 10/01/2025" />

                    <TextView
                        android:id="@+id/tvDataFim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textStyle="italic"
                        tools:text="Data de Término: 30/06/2025" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Funcionários -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_func"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <!-- Ativos -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/export_sub_active"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerFuncAtivos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Maria Souza (pago: R$ 4.200,00)" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Carlos Lima (pago: R$ 3.100,00)" />
                    </LinearLayout>

                    <!-- Inativos -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/export_sub_inactive"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerFuncInativos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="João Pedro (pago: R$ 800,00)" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:id="@+id/tvFuncTotalGasto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        tools:text="Total gasto com Funcionário: R$ 8.100,00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_notas"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <!-- A Receber -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/export_sub_due"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerNotasReceber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Cimento — 12/03/2025 — R$ 450,00" />
                    </LinearLayout>

                    <!-- Pago -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/export_sub_paid"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerNotasPagas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Areia — 02/03/2025 — R$ 320,00" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:id="@+id/tvTotalNotasReceber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Total de Notas para Receber: R$ 450,00" />

                    <TextView
                        android:id="@+id/tvTotalNotasPagas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total de Notas Pagas: R$ 320,00" />

                    <TextView
                        android:id="@+id/tvTotalNotasGeral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        tools:text="Total geral de Notas: R$ 770,00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cronogramas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_cron"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <!-- Pendente -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/cron_tab_pending"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerCronPendentes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Alvenaria — Início: 05/03/2025  Fim: 10/03/2025" />
                    </LinearLayout>

                    <!-- Andamento -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/cron_tab_progress"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerCronAndamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical" />

                    <!-- Concluído -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/cron_tab_done"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerCronConcluidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:id="@+id/tvTotalCronPend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Total de cronogramas em &quot;Pendente&quot;: 1" />

                    <TextView
                        android:id="@+id/tvTotalCronAnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total de cronogramas em &quot;Andamento&quot;: 0" />

                    <TextView
                        android:id="@+id/tvTotalCronConc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total de cronogramas em &quot;Concluído&quot;: 0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Materiais -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_material"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <!-- Ativo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/material_status_active"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerMatAtivos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Cimento — Qtde: 20" />
                    </LinearLayout>

                    <!-- Inativo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/material_status_inactive"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerMatInativos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:id="@+id/tvTotalMatAtivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Total de Materiais Ativo: 1" />

                    <TextView
                        android:id="@+id/tvTotalMatInativo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total de Materiais Inativo: 0" />

                    <TextView
                        android:id="@+id/tvTotalMatGeral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        tools:text="Total de materiais usados na obra: 1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Financeiro + Saldos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_finance"
                        android:textAppearance="@style/TextAppearance.ObrasApp.TitleMedium18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFinFuncTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Total gasto com funcionários: R$ 8.100,00" />

                    <TextView
                        android:id="@+id/tvFinNotasDue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total a receber por notas: R$ 450,00" />

                    <TextView
                        android:id="@+id/tvFinNotasPaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total pago por notas: R$ 320,00" />

                    <TextView
                        android:id="@+id/tvFinNotasAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total geral de Notas: R$ 770,00" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_saldo_inicial"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSaldoInicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Valor: R$ 10.000,00" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/export_section_aportes"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerAportes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <!-- Exemplo -->
                        <TextView
                            android:id="@+id/tvAportesEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="Sem aportes cadastrados."
                            tools:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSaldoComAportes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Saldo com Aportes: R$ 11.500,00" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/export_section_saldo_restante"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSaldoRestante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        tools:text="Valor: R$ 6.775,00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rodapé: data atual -->
            <TextView
                android:id="@+id/tvFooterDataHoje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="Gerado em 01/09/2025" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB: rolar até o final -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/scroll_to_bottom"
        android:src="@drawable/ic_arrow_downward"
        android:visibility="gone"
        app:backgroundTint="@color/fab_scroll_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/fab_scroll_icon_tint"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
