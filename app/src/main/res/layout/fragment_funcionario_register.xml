<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ─────────  Toolbar  ───────── -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarFuncReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/func_reg_title"
        app:titleCentered="true" />

    <!-- ─────────  Formulário rolável  ───────── -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/funcRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarFuncReg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeFunc"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/func_reg_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeFunc"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Função -->
            <TextView
                android:id="@+id/tvTitleFuncao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/func_reg_role"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- Linha 1 de funções -->
            <RadioGroup
                android:id="@+id/rgFuncao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbPintor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/func_pintor"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbPedreiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/func_pedreiro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbEletricista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/func_eletricista"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </RadioGroup>

            <!-- Linha 2 de funções -->
            <RadioGroup
                android:id="@+id/rgFuncao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbEncanador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/func_encanador"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbAjudante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/func_ajudante"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbOutro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/func_outro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvFuncaoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/func_reg_error_role"
                tools:visibility="visible" />

            <!-- Salário -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSalario"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/func_reg_salary_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSalario"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal|number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forma de Pagamento -->
            <TextView
                android:id="@+id/tvTitlePagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/func_reg_payment"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgPagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"> <!-- Linha 1: Diária | Semanal -->
                <LinearLayout
                    android:id="@+id/rowPagto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbDiaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/func_reg_salary_options1"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbSemanal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/func_reg_salary_options2"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
                <!-- Linha 2: Mensal | Tarefeiro -->
                <LinearLayout
                    android:id="@+id/rowPagto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbMensal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/func_reg_salary_options3"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbTarefeiro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/func_reg_salary_options4"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/tvPagamentoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/func_reg_error_pagamento"
                tools:visibility="visible" />

            <!-- Pix -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPix"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/func_reg_pix_hint"
                app:endIconContentDescription="@string/generic_copy"
                app:endIconDrawable="@drawable/ic_copy"
                app:endIconMode="custom"
                app:endIconTint="@color/md_theme_light_onSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPix"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_pix"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dias trabalhados -->
            <TextView
                android:id="@+id/tvLabelDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/func_reg_days_hint"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_minus"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvDias"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/dias_trabalhados_qtd"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_plus"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/func_reg_status"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusAtivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/material_status_active"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusInativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/material_status_inactive"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- ─────────  Pagamento (somente no modo edição)  ───────── -->
            <LinearLayout
                android:id="@+id/layoutPagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPagamento"
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/pagamento">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPagamento"
                        style="@style/Widget.ObrasApp.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789.,"
                        android:drawableStart="@drawable/ic_money"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal|number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddPagamento"
                    style="@style/Widget.ObrasApp.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/adicionar" />
            </LinearLayout>


            <!-- Mensagem de vazio (mostrada quando não há pagamentos ainda) -->
            <TextView
                android:id="@+id/tvEmptyPagamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/nenhum_pagamento"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- ======= ABA: Histórico de Pagamento(s) ======= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAbaHistoricoPagto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cabeçalho (clicável para expandir/retrair) -->
                    <LinearLayout
                        android:id="@+id/headerAbaHistoricoPagto"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvTituloHistoricoPagto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/historico_pagamentos"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivArrowHistoricoPagto"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/expandir"
                            android:importantForAccessibility="no"
                            android:rotation="0"
                            android:src="@drawable/ic_expand_more" />
                    </LinearLayout>

                    <!-- Conteúdo expansível -->
                    <LinearLayout
                        android:id="@+id/contentAbaHistoricoPagto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="320dp"
                            android:overScrollMode="ifContentScrolls"
                            android:scrollbarStyle="outsideOverlay"
                            android:scrollbars="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- RecyclerView do histórico de pagamentos (com botão Excluir) -->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvPagamentos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/item_pagamento" />
                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveFuncionario"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/generic_add" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSaveFuncionario"
                style="?attr/linearProgressIndicatorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indeterminateAnimationType="disjoint"
                app:trackCornerRadius="8dp"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB: rolar para o final (aparece só em modo edição) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/scroll_to_bottom"
        android:src="@drawable/ic_arrow_downward"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/scrimEditPagamento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Overlay que captura toques fora do card (não fecha ao tocar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayEditPagamento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEditPagamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_min="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editar_pagamento"
                    android:textSize="22sp"
                    android:textStyle="bold|italic" />

                <!-- Valor -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditValor"
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/pagamento">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEditValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789.,"
                        android:drawableStart="@drawable/ic_money"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:inputType="numberDecimal|number"
                        android:minHeight="60dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Data (abre DatePicker ao tocar) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditData"
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/editar_data">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEditData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_schedule"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:focusable="false"
                        android:minHeight="60dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="16dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botões: Salvar (esquerda) | Cancelar (direita) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveEditPagamento"
                        style="@style/Widget.ObrasApp.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:text="@string/generic_save" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelEditPagamento"
                        style="@style/Widget.ObrasApp.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:text="@string/generic_cancel" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>