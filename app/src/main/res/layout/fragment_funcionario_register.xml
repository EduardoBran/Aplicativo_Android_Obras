<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ─────────  Toolbar  ───────── -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarFuncReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/func_reg_title"
        app:titleCentered="true" />

    <!-- ─────────  Formulário rolável  ───────── -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/funcRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarFuncReg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeFunc"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeFunc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:hint="@string/func_reg_name_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Função -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/func_reg_role"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- Linha 1 de funções -->
            <RadioGroup
                android:id="@+id/rgFuncao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbPintor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/func_pintor"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbPedreiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/func_pedreiro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbEletricista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/func_eletricista"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </RadioGroup>

            <!-- Linha 2 de funções -->
            <RadioGroup
                android:id="@+id/rgFuncao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbEncanador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/func_encanador"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbAjudante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/func_ajudante"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/rbOutro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/func_outro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvFuncaoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/func_reg_error_role"
                tools:visibility="visible" />

            <!-- Salário -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSalario"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSalario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:hint="@string/func_reg_salary_hint"
                    android:inputType="numberDecimal|number"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forma de Pagamento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/func_reg_payment"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgPagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"> <!-- Linha 1: Diária | Semanal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbDiaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/func_reg_salary_options1"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbSemanal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/func_reg_salary_options2"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
                <!-- Linha 2: Mensal | Tarefeiro -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbMensal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/func_reg_salary_options3"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbTarefeiro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/func_reg_salary_options4"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/tvPagamentoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/func_reg_error_pagamento"
                tools:visibility="visible" />

            <!-- Pix -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPix"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:endIconContentDescription="@string/generic_copy"
                app:endIconDrawable="@drawable/ic_copy"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_pix"
                    android:drawablePadding="12dp"
                    android:hint="@string/func_reg_pix_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dias trabalhados -->
            <TextView
                android:id="@+id/tvLabelDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/func_reg_days_hint"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_minus"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvDias"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/dias_trabalhados_qtd"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_plus"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/func_reg_status"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusAtivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/material_status_active"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusInativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/material_status_inactive"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Adicional (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAdicional"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdicional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:hint="@string/func_reg_additional_hint"
                    android:inputType="numberDecimal|number"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvAdicionalTotalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="Adicional acumulado: R$ 250,00"
                tools:visibility="visible" />

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveFuncionario"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/func_reg_button_save"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
