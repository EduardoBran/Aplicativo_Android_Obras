<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- 1) Toolbar fixo no topo -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHome"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_home_dense"
        app:popupTheme="@style/ThemeOverlay.Material3.Light"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        tools:menu="@menu/menu_home_dense"
        tools:title="Obra: Alice" />

    <!-- SCRIM para fechar a busca ao tocar fora -->
    <View
        android:id="@+id/searchScrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        tools:visibility="gone" />

    <!-- CONTAINER da busca (inicialmente oculto) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/home_header_margin_horizontal"
        android:layout_marginTop="@dimen/home_header_margin_vertical"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="@dimen/home_header_radius"
        app:cardElevation="@dimen/home_header_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarHome"
        tools:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:paddingHorizontal="@dimen/home_header_padding_horizontal"
            android:paddingVertical="@dimen/home_header_padding_vertical"
            app:endIconContentDescription="@string/search"
            app:endIconDrawable="@drawable/ic_chevron_right"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                android:imeOptions="actionGo"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 2) Header FIXO logo abaixo do Toolbar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/home_header_margin_horizontal"
        android:layout_marginVertical="@dimen/home_header_margin_vertical"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="@dimen/home_header_radius"
        app:cardElevation="@dimen/home_header_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/home_header_padding_horizontal"
            android:paddingVertical="@dimen/home_header_padding_vertical">

            <com.luizeduardobrandao.obra.ui.cronograma.gantt.anim.PercentBarView
                android:id="@+id/progressStatus"
                android:layout_width="0dp"
                android:layout_height="@dimen/progress_status_height"
                android:layout_marginEnd="@dimen/home_header_content_gap"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerCronograma"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ellipsize="none"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:minWidth="@dimen/home_btn_cronograma_min_width"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:text="@string/home_btn_cronograma"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:iconPadding="0dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3) Lista ocupa o restante, com gap igual ao topo do Header -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/home_list_margin_vertical"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        tools:listitem="@layout/item_action_list"
        tools:itemCount="8"/>

    <!-- 4) Loading Lottie centralizado na tela inteira -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingHomeLottie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading_home"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_renderMode="software"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>