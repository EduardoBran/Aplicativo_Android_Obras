<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarMaterialReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/material_register_title"
        app:titleCentered="true" />

    <!-- Formulário rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/materialRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarMaterialReg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome (obrigatório) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeMaterial"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/material_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeMaterial"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Erro do Nome (fora do TIL, controla o espaçamento) -->
            <TextView
                android:id="@+id/tvNomeMaterialError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/material_hint_name"
                tools:visibility="visible" />

            <!-- Descrição (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescMaterial"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/material_hint_description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescMaterial"
                    style="@style/Widget.ObrasApp.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_summary"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quantidade (– / número / +) -->
            <TextView
                android:id="@+id/tvLabelQuantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/material_reg_quantity_label"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnMinusQtd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_minus"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvQuantidade"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/dias_trabalhados_qtd"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnPlusQtd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/generic_plus"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/material_reg_status"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgStatusMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusAtivoMat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/material_status_active"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusInativoMat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/material_status_inactive"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMaterial"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/generic_add" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSaveMaterial"
                style="?attr/linearProgressIndicatorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indeterminateAnimationType="disjoint"
                app:trackCornerRadius="8dp"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>