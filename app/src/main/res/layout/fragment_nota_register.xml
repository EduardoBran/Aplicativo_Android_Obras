<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarNotaReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/nota_reg_title"
        app:titleCentered="true" />

    <!-- Formulário rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/notaRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarNotaReg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp">

            <!-- Seção: Foto da nota -->
            <TextView
                android:id="@+id/tvPhotoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nota_photo_section_title"
                android:textAppearance="?attr/textAppearanceHeadline5" />

            <!-- Linha com 2 botões: Enviar imagem / Tirar foto -->
            <LinearLayout
                android:id="@+id/rowPhotoButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickImage"
                    style="@style/Widget.ObrasApp.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nota_btn_pick_image"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTakePhoto"
                    style="@style/Widget.ObrasApp.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nota_btn_take_photo"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- “Chip” informativo: aparece quando houver foto selecionada/capturada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhotoInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                tools:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Texto que o usuário toca para abrir a pré-visualização -->
                    <TextView
                        android:id="@+id/tvPhotoPreview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:text="@string/nota_photo_preview_content_desc"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnDeletePhoto"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Ícone para excluir a foto -->
                    <ImageButton
                        android:id="@+id/btnDeletePhoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/nota_photo_delete_content_desc"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/icon_delete_recycler" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nome do Material -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeMaterial"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:hint="@string/nota_reg_material_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descrição (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescricaoMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_summary"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:hint="@string/nota_reg_desc_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nome da Loja -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLoja"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_store"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:hint="@string/nota_reg_store_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo (CheckBoxes) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/nota_reg_type"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbPintura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_pintura"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <CheckBox
                    android:id="@+id/cbPedreiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_pedreiro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <CheckBox
                    android:id="@+id/cbHidraulica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_hidraulica"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <CheckBox
                    android:id="@+id/cbEletrica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_eletrica"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <CheckBox
                    android:id="@+id/cbLimpeza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_limpeza"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <CheckBox
                    android:id="@+id/cbOutros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nota_outro"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTipoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/nota_reg_error_tipo"
                tools:visibility="visible" />

            <!-- Data -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataNota"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:focusable="false"
                    android:hint="@string/nota_reg_date_hint"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/nota_reg_status"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RadioGroup
                android:id="@+id/rgStatusNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusPagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/nota_tab_due"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/nota_tab_paid"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Valor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilValorNota"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValorNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                    android:hint="@string/nota_reg_value_hint"
                    android:inputType="numberDecimal|number"
                    android:minHeight="60dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveNota"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/nota_reg_button_save"
                android:textSize="18sp" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSaveNota"
                style="?attr/linearProgressIndicatorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indeterminateAnimationType="disjoint"
                app:trackCornerRadius="8dp"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB: rolar para o final (aparece só em modo edição) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/scroll_to_bottom"
        android:src="@drawable/ic_arrow_downward"
        android:visibility="gone"
        app:backgroundTint="@color/fab_scroll_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/fab_scroll_icon_tint"
        tools:visibility="visible" />

    <!-- Overlay de pré-visualização: cobre a tela; fecha ao tocar fora ou no X -->
    <FrameLayout
        android:id="@+id/photoPreviewOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <!-- Card central com a imagem -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPhotoPreviewLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/nota_photo_preview_content_desc"
                    android:minHeight="420dp"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/ic_image_placeholder"
                    tools:visibility="visible" />

                <!-- Progress enquanto a imagem remota carrega -->
                <ProgressBar
                    android:id="@+id/progressPhotoPreview"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Botão fechar no canto superior direito -->
                <ImageButton
                    android:id="@+id/btnClosePreview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/snack_button_ok"
                    android:src="@drawable/ic_close"
                    app:tint="?attr/colorOnSurface" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Overlay do preenchimento automático (IA) -->
    <FrameLayout
        android:id="@+id/autoFillOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <!-- Conteúdo central: ícone do robô + progress -->
        <!-- Lottie central -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAi"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:contentDescription="@string/ia_robot_icon_desc"
            android:importantForAccessibility="no"
            app:lottie_rawRes="@raw/ai_powered"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1.0"
            app:lottie_renderMode="software" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>