<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarNotaReg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/nota_reg_title"
        app:titleCentered="true" />

    <!-- Formulário rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/notaRegScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarNotaReg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome do Material -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNomeMaterial"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="12dp"
                    android:hint="@string/nota_reg_material_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descrição (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescricaoMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_summary"
                    android:drawablePadding="12dp"
                    android:hint="@string/nota_reg_desc_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nome da Loja -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLoja"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_store"
                    android:drawablePadding="12dp"
                    android:hint="@string/nota_reg_store_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo (CheckBoxes) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/nota_reg_type"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbPintura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pintura" />

                <CheckBox
                    android:id="@+id/cbPedreiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedreiro" />

                <CheckBox
                    android:id="@+id/cbHidraulica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hidráulica" />

                <CheckBox
                    android:id="@+id/cbEletrica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elétrica" />

                <CheckBox
                    android:id="@+id/cbOutros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outros" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTipoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/md_theme_light_error"
                android:visibility="gone"
                tools:text="@string/nota_reg_error_tipo"
                tools:visibility="visible" />

            <!-- Data -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDataNota"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDataNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:hint="@string/nota_reg_date_hint"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/nota_reg_status"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <RadioGroup
                android:id="@+id/rgStatusNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusPagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/nota_tab_due" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbStatusPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/nota_tab_paid" />
            </RadioGroup>

            <!-- Valor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilValorNota"
                style="@style/Widget.ObrasApp.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValorNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="12dp"
                    android:hint="@string/nota_reg_value_hint"
                    android:inputType="numberDecimal"
                    android:minHeight="60dp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveNota"
                style="@style/Widget.ObrasApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/nota_reg_button_save" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>