<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar com ícone e texto visíveis -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRegister"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:title="@string/register_title"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- Conteúdo centralizado em uma scroll view -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/registerScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarRegister">

        <!-- SUBSTITUI O LinearLayout antigo por este ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- ILUSTRAÇÃO DO REGISTER (id e estilo idênticos ao login) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_logo_top_space"
                android:layout_marginBottom="@dimen/login_logo_bottom_space"
                android:adjustViewBounds="true"
                android:contentDescription="@string/cd_login_illustration"
                android:maxHeight="@dimen/login_logo_max_height"
                android:padding="@dimen/login_hero_inner_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_register"
                app:contentPadding="@dimen/login_hero_inner_padding"
                app:layout_constraintBottom_toTopOf="@id/formContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ObrasApp.Hero"
                app:strokeColor="@color/md_theme_light_outline"
                app:strokeWidth="@dimen/login_hero_stroke" />

            <!-- FORMULÁRIO (fica centralizado como no login) -->
            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Nome -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:hint="@string/register_name_hint"
                        android:minHeight="60dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- E-mail -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_login"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:hint="@string/register_email_hint"
                        android:inputType="textEmailAddress"
                        android:minHeight="60dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Senha -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.ObrasApp.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:endIconContentDescription="@string/cd_toggle_password_visibility"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/md_theme_light_onSurface">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasswordReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pass"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                        android:hint="@string/register_password_hint"
                        android:inputType="textPassword"
                        android:minHeight="60dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão Cadastrar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    style="@style/Widget.ObrasApp.ButtonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/register_button"
                    android:textSize="18sp" />

                <!-- ProgressBar -->
                <ProgressBar
                    android:id="@+id/progressRegister"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>