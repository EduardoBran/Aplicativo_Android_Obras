<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ─────────  Toolbar  ───────── -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarResumoNotas"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/nota_sum_title"
        app:titleCentered="true" />

    <!-- Mensagem de lista vazia -->
    <TextView
        android:id="@+id/tvEmptyNotas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nota_empty_message"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/llTotaisContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarResumoNotas" />

    <ProgressBar
        android:id="@+id/progressNotasList"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/llTotaisContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarResumoNotas" />

    <!-- ─────────  Lista de Notas  ───────── -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotasResumo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/llTotaisContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarResumoNotas"
        tools:listitem="@layout/item_nota" />

    <!-- ─────────  Área de Totais (com abas expansíveis)  ───────── -->
    <LinearLayout
        android:id="@+id/llTotaisContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- ============ ABA 1: TOTAIS ============ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbaTotais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Cabeçalho (único clicável) -->
                <LinearLayout
                    android:id="@+id/headerAbaTotais"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:accessibilityHeading="true"
                        android:text="@string/total_geral_title_totais"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <ImageView
                        android:id="@+id/ivArrowTotais"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/expandir"
                        android:importantForAccessibility="no"
                        android:rotation="0"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Conteúdo expansível -->
                <LinearLayout
                    android:id="@+id/contentAbaTotais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <!-- Card: Totais (a pagar / pago / geral) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Bloco: Total a pagar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/totalDue_bg"
                                android:orientation="horizontal"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/nota_sum_total_due"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalDue_text"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvResumoTotalAPagar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nota_sum_total"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalDue_value"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Espaço -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="12dp" />

                            <!-- Bloco: Total pago -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/totalPaid_bg"
                                android:orientation="horizontal"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/nota_sum_total_paid"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalPaid_text"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvResumoTotalPago"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nota_sum_total"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalPaid_value"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Espaço -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="12dp" />

                            <!-- Bloco: Total geral -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/totalOverall_bg"
                                android:orientation="horizontal"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/total_geral"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalOverall_text"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvResumoTotalGeral"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nota_sum_total"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalOverall_value"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- ============ ABA 2: TOTAIS POR TIPO ============ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbaTipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Cabeçalho (único clicável) -->
                <LinearLayout
                    android:id="@+id/headerAbaTipos"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:accessibilityHeading="true"
                        android:text="@string/total_geral_title_tipos"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <ImageView
                        android:id="@+id/ivArrowTipos"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/expandir"
                        android:importantForAccessibility="no"
                        android:rotation="0"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Conteúdo expansível -->
                <LinearLayout
                    android:id="@+id/contentAbaTipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <!-- Card: Totais por Tipo (A Pagar / Pago) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Bloco: Totais por tipo (A Pagar) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/totalDue_bg"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nota_sum_type_due"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalDue_text"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/containerTiposValoresAPagar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="vertical" />
                            </LinearLayout>

                            <!-- Espaço -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="12dp" />

                            <!-- Bloco: Totais por tipo (Pago) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/totalPaid_bg"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nota_sum_type_paid"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/totalPaid_text"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/containerTiposValoresPago"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="vertical" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>