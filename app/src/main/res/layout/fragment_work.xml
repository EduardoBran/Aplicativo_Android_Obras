<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar – título centralizado, sem ícone de voltar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarWork"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.ObrasApp.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/work_title"
        app:titleCentered="true" />

    <!-- Área rolável com todos os elementos centralizados -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/workScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarWork">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/workContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <!-- Guideline para centrar verticalmente -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />


            <!-- Cenário: sem obras -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/gCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gCenter"
                tools:visibility="gone">

                <!-- HERO (igual ao login) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgEmpty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_logo_top_space"
                    android:layout_marginBottom="@dimen/login_logo_bottom_space"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cd_login_illustration"
                    android:maxHeight="@dimen/login_logo_max_height"
                    android:padding="@dimen/login_hero_inner_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_new_work"
                    app:contentPadding="@dimen/login_hero_inner_padding"
                    app:layout_constraintBottom_toTopOf="@id/emptyContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ObrasApp.Hero"
                    app:strokeColor="@color/md_theme_light_outline"
                    app:strokeWidth="@dimen/login_hero_stroke" />

                <!-- CONTAINER do texto/botão (centralizado como no login) -->
                <LinearLayout
                    android:id="@+id/emptyContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvNoWorks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_no_items"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNewWorkEmpty"
                        style="@style/Widget.ObrasApp.ButtonLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/work_new_button"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Cenário: obras existentes -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/gCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gCenter"
                tools:visibility="visible">

                <!-- HERO (igual ao login) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSelect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_logo_top_space"
                    android:layout_marginBottom="@dimen/login_logo_bottom_space"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cd_login_illustration"
                    android:maxHeight="@dimen/login_logo_max_height"
                    android:padding="@dimen/login_hero_inner_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_sele_work"
                    app:contentPadding="@dimen/login_hero_inner_padding"
                    app:layout_constraintBottom_toTopOf="@id/selectContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ObrasApp.Hero"
                    app:strokeColor="@color/md_theme_light_outline"
                    app:strokeWidth="@dimen/login_hero_stroke" />

                <!-- CONTAINER do título + dropdown + botões (centralizado) -->
                <LinearLayout
                    android:id="@+id/selectContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvSelectWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_select_prompt"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold|italic" />

                    <!-- Exposed Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilObras"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:hint="@string/work_dropdown_hint"
                        app:boxBackgroundMode="filled"
                        app:endIconMode="dropdown_menu"
                        app:hintEnabled="true">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/autoObras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dropDownVerticalOffset="0dp"
                            android:ellipsize="end"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botões Nova Obra / Continuar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNewWork"
                            style="@style/Widget.ObrasApp.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/work_new_button"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnContinue"
                            style="@style/Widget.ObrasApp.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="@string/generic_continue"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- CardView Novo Cadastro -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNewWork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="@id/gCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gCenter"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Nome cliente -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                            android:hint="@string/obra_data_client_hint"
                            android:maxLength="15"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Endereço -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEndereco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_address"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                            android:hint="@string/obra_data_address_hint"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Contato (telefone ou e-mail) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilContato"
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etContato"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_contact"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                            android:hint="@string/obra_data_contact_hint"
                            android:inputType="textEmailAddress|phone"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Descrição -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_summary"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                            android:hint="@string/obra_data_desc_hint"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Saldo -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.ObrasApp.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSaldo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789.,"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                            android:hint="@string/obra_data_balance_hint"
                            android:inputType="numberDecimal|number"
                            android:minHeight="60dp"
                            android:paddingTop="22dp"
                            android:paddingBottom="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Datas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <!-- Data de Início -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDataInicio"
                            style="@style/Widget.ObrasApp.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDataInicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_schedule"
                                android:drawablePadding="12dp"
                                android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                                android:focusable="false"
                                android:hint="@string/obra_data_date_start_hint"
                                android:minHeight="60dp"
                                android:paddingTop="22dp"
                                android:paddingBottom="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Espaço entre os campos -->
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <!-- Data de Término -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDataFim"
                            style="@style/Widget.ObrasApp.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDataFim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_schedule"
                                android:drawablePadding="12dp"
                                android:drawableTint="@color/md_theme_light_onSurfaceVariant"
                                android:focusable="false"
                                android:hint="@string/obra_data_date_end_hint"
                                android:minHeight="60dp"
                                android:paddingTop="22dp"
                                android:paddingBottom="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Botões Salvar / Voltar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveWork"
                            style="@style/Widget.ObrasApp.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="@string/generic_save"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelWork"
                            style="@style/Widget.ObrasApp.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/generic_back"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressCard"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- depois de todos os seus containers (layoutEmpty, layoutSelect, cardNewWork) -->
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierScenarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="layoutEmpty,layoutSelect" />

            <!-- ProgressBar sempre abaixo do barrier -->
            <ProgressBar
                android:id="@+id/progressWork"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrierScenarios"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>