<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloEtapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Descrição resumida -->
        <TextView
            android:id="@+id/tvDescEtapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloEtapa" />

        <!-- Datas -->
        <TextView
            android:id="@+id/tvDatasEtapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="01/08 → 10/08"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@id/tvStatusEtapa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescEtapa" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatusEtapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendente"
            android:textColor="@color/md_theme_light_error"
            app:layout_constraintBaseline_toBaselineOf="@id/tvDatasEtapa"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/md_theme_light_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDatasEtapa" />

        <!-- Ícones de ação -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDatasEtapa">

            <ImageButton
                android:id="@+id/btnEditEtapa"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_update"
                android:src="@drawable/ic_edit"
                app:tint="@color/md_theme_light_tertiary" />

            <ImageButton
                android:id="@+id/btnDetailEtapa"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/detail"
                android:src="@drawable/ic_info"
                app:tint="@color/warning" />

            <ImageButton
                android:id="@+id/btnDeleteEtapa"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_delete"
                android:src="@drawable/ic_delete"
                app:tint="@color/md_theme_light_error" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>