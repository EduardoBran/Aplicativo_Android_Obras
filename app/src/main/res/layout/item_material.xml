<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nome -->
        <TextView
            android:id="@+id/tvNomeMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvStatusMaterial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cimento CP-II 50kg" />

        <!-- Status (Ativo/Inativo) -->
        <TextView
            android:id="@+id/tvStatusMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/success"
            app:layout_constraintBaseline_toBaselineOf="@id/tvNomeMaterial"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Ativo" />

        <!-- Descrição resumida -->
        <TextView
            android:id="@+id/tvDescMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNomeMaterial"
            tools:text="Saco de 50 kg, marca X" />

        <!-- Quantidade (com prefixo em negrito via adapter, se quiser) -->
        <TextView
            android:id="@+id/tvQtdMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescMaterial"
            tools:text="Quantidade: 12" />

        <!-- Divider -->
        <View
            android:id="@+id/dividerActions"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/md_theme_light_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQtdMaterial" />

        <!-- Ações -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerActions">

            <ImageButton
                android:id="@+id/btnEditMaterial"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_update"
                android:src="@drawable/ic_edit"
                app:tint="@color/md_theme_light_tertiary" />

            <ImageButton
                android:id="@+id/btnDetailMaterial"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/detail"
                android:src="@drawable/ic_info"
                app:tint="@color/warning" />

            <ImageButton
                android:id="@+id/btnDeleteMaterial"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_delete"
                android:src="@drawable/ic_delete"
                app:tint="@color/md_theme_light_error" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>