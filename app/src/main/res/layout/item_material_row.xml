<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="56dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp">

    <!-- Guideline fim da coluna Item (~40%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineItemEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36" />

    <!-- Guideline fim da coluna Unid (~40%) (UNIDA COM COLUNA Usar e formando nova coluna "Qtd" -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUnidEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <!-- Guideline fim da coluna Usar (~70%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUsarEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <!-- Guideline INÍCIO da coluna Comprar (~74%) para dar respiro -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineComprarStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <!-- Coluna: Item -->
    <TextView
        android:id="@+id/tvItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineItemEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Piso porcelanato 60×60 cm" />

    <!-- Coluna: Unidade -->
    <TextView
        android:id="@+id/tvUnid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineUnidEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineItemEnd"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="m²" />

    <!-- Coluna: Quantidade Usada -->
    <TextView
        android:id="@+id/tvQtdUsada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineUsarEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineUnidEnd"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="25552,50kg" />

    <!-- Coluna: Quantidade Comprar (agora com espaço visual) -->
    <TextView
        android:id="@+id/tvQtdComprar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineComprarStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2 pct 5kg + 1 pct 2kg" />

    <!-- Barreira: pega o ponto mais baixo da linha principal -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomRowBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvItem,tvUnid,tvQtdUsada,tvQtdComprar" />

    <!-- Observação (sempre abaixo da linha mais baixa) -->
    <TextView
        android:id="@+id/tvObservacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomRowBarrier"
        tools:text="Inclui sobra técnica de 10% • 72 peças (5 caixas)"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>