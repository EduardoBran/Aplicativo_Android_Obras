<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="56dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp">

    <!-- Coluna: Item (40%) -->
    <TextView
        android:id="@+id/tvItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/tvUnid"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.38"
        tools:text="Piso porcelanato 60×60 cm" />

    <!-- Coluna: Unidade (12%) -->
    <TextView
        android:id="@+id/tvUnid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tvQtdUsada"
        app:layout_constraintStart_toEndOf="@id/tvItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        tools:text="m²" />

    <!-- Coluna: Quantidade Usada (22%) -->
    <TextView
        android:id="@+id/tvQtdUsada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/tvQtdComprar"
        app:layout_constraintStart_toEndOf="@id/tvUnid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.22"
        tools:text="25,50" />

    <!-- Coluna: Quantidade Comprar (28%) -->
    <TextView
        android:id="@+id/tvQtdComprar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvQtdUsada"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.28"
        tools:text="2× 25kg" />

    <!-- Observação (linha abaixo, span total) -->
    <TextView
        android:id="@+id/tvObservacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvItem"
        tools:text="Inclui sobra técnica de 10% • 72 peças (5 caixas)"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>