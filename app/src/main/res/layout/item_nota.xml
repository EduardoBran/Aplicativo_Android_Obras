<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nome do material (destaque) -->
        <TextView
            android:id="@+id/tvNomeMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary_recycler"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvValor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do Material" />

        <!-- Valor (direita) -->
        <TextView
            android:id="@+id/tvValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:fontFeatureSettings="tnum"
            android:letterSpacing="0"
            android:textColor="@color/text_primary_recycler"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvNomeMaterial"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="R$ 100,00" />

        <!-- Nome da loja -->
        <TextView
            android:id="@+id/tvLoja"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_secondary_recycler"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNomeMaterial"
            tools:text="Loja: Nome da Loja" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_theme_light_error"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLoja"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="A Pagar" />

        <!-- Tipos do material (esquerda, na mesma linha da Data) -->
        <TextView
            android:id="@+id/tvTipos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_secondary_recycler"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/tvData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLoja"
            tools:text="Pintura, Elétrica" />

        <!-- Data da nota (direita, na mesma linha dos Tipos, e abaixo do Status) -->
        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto"
            android:fontFeatureSettings="tnum"
            android:letterSpacing="0"
            android:textColor="@color/text_secondary_recycler"
            android:textSize="18sp"
            android:textStyle="italic|bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTipos"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12/08/2025" />

        <!-- Barrier para posicionar o divisor abaixo da linha Tipos+Data -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierBottomHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvTipos,tvData" />

        <!-- Divisor -->
        <View
            android:id="@+id/dividerActions"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="?attr/colorOutline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierBottomHeader" />

        <!-- Ícones de ação -->
        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerActions">

            <ImageButton
                android:id="@+id/btnEditNota"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_update"
                android:src="@drawable/ic_edit"
                app:tint="@color/icon_edit_recycler" />

            <ImageButton
                android:id="@+id/btnDetailNota"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/detail"
                android:src="@drawable/ic_info"
                app:tint="@color/icon_info_recycler" />

            <ImageButton
                android:id="@+id/btnDeleteNota"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/generic_delete"
                android:src="@drawable/ic_delete"
                app:tint="@color/icon_delete_recycler" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>