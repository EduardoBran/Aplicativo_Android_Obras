<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCalc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculo.CalcRevestimentoFragment"
    tools:ignore="TooManyViews">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationContentDescription="Voltar"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:title="@string/calc_title"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.CalcToolbarTitle"
        app:titleTextColor="@color/white">

        <include
            android:id="@+id/toolbarCustomActions"
            layout="@layout/fragment_calc_toolbar_custom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Conteúdo -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:id="@+id/contentColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="0dp">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@android:anim/fade_in"
                android:measureAllChildren="false"
                android:outAnimation="@android:anim/fade_out"
                tools:ignore="UselessParent">

                <!-- ==================== TELA 1 – Tipo de Revestimento ==================== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <!-- Título principal -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/calc_step1_title"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:textStyle="bold" />

                    <!-- Subtítulo discreto -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/calc_step1_subtitle"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />


                    <!-- Grade de cards clicáveis para escolher o tipo de revestimento -->
                    <GridLayout
                        android:id="@+id/gridRevest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:useDefaultMargins="true">

                        <!-- Piso -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbPiso"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_piso"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_piso_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Piso Vinílico -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbPisoVinilico"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_piso_vinilico"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_piso_vinilico_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Azulejo -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbAzulejo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_azulejo"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_azulejo_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Pastilha -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbPastilha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_pastilha"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_pastilha_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Mármore -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbMarmore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_marmore"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_marmore_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Granito -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbGranito"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_granito"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_granito_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Piso Intertravado -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbPisoIntertravado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_piso_intertravado"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_piso_intertravado_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <!-- Pedra Portuguesa -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/rbPedra"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardBackgroundColor="@color/calc_tile_background_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/calc_tile_ripple_color"
                            app:strokeColor="@color/calc_tile_stroke_color"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calc_step1_opt_pedra"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/calc_step1_opt_pedra_desc"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <!-- Tipo da Peça (mesmo id, agora com cara de card de seção) -->
                    <LinearLayout
                        android:id="@+id/groupPlacaTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_calc_section_card"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_placa_tipo"
                            android:textAlignment="center"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rgPlacaTipo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbCeramica"
                                style="@style/Calc.SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="@string/calc_step1_piso_ceramica" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbPorcelanato"
                                style="@style/Calc.SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/calc_step1_piso_porcelanato" />
                        </RadioGroup>
                    </LinearLayout>

                    <!-- Grupo de Aplicação específico para Mármore/Granito -->
                    <LinearLayout
                        android:id="@+id/groupMgAplicacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_calc_section_card"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/calc_step1_mg_aplicacao_title"
                            android:textAlignment="center"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rgMgAplicacao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbMgPiso"
                                style="@style/Calc.SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="@string/calc_mg_aplicacao_piso" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbMgParede"
                                style="@style/Calc.SegmentedRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/calc_mg_aplicacao_parede" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

            </ViewFlipper>
        </LinearLayout>
    </ScrollView>

    <!-- ================== Barra inferior (Navegação) ================== -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/cont_btn_back"
            android:text="@string/generic_back"
            android:textSize="@dimen/calc_btn_normal_text"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:contentDescription="@string/cont_btn_avancar"
            android:text="@string/generic_next"
            android:textSize="@dimen/calc_btn_normal_text" />

    </LinearLayout>

    <!-- ProgressBar para loading -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_theme_light_onPrimary"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorColor="?attr/colorPrimary" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>