<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material 3 Theme  -->
    <style name="Theme.ObrasApp" parent="Theme.Material3.DynamicColors.Light.NoActionBar">
        <!--Cor base -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <item name="colorError">@color/md_theme_light_error</item>

        <!--Component radius -->
        <item name="shapeAppearanceSmallComponent">@style/App.Shape.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/App.Shape.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/App.Shape.Large</item>

        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
    </style>


    <!-- Shapes -->
    <style name="App.Shape.Small" parent="@style/ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>
    <style name="App.Shape.Medium" parent="@style/ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>
    <style name="App.Shape.Large" parent="@style/ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">12dp</item>
    </style>


    <!-- Buttons principais -->
    <style name="Widget.ObrasApp.Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>

    </style>

    <!-- Botttons outlined -->
    <style name="Widget.ObrasApp.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:strokeColor">@color/md_theme_light_outline</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <!-- Buttons Login -->
    <!-- Tipografia do texto do botão Entrar -->
    <style name="TextAppearance.ObrasApp.ButtonLogin" parent="TextAppearance.Material3.LabelLarge">
        <!-- pese 600 bonito para CTA -->
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_bold</item>

        <!-- tracking leve melhora a leitura -->
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Estilo do MaterialButton do login -->
    <style name="Widget.ObrasApp.ButtonLogin" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>

        <!-- aplique a aparência nas DUAS chaves -->
        <item name="android:textAppearance">@style/TextAppearance.ObrasApp.ButtonLogin</item>

        <!-- redundância útil para alguns devices -->
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Link Text Login -->
    <style name="Widget.ObrasApp.LinkText" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <!-- TextInput -->
    <style name="Widget.ObrasApp.TextInputLayout"
        parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/md_theme_light_surfaceVariant</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- cor do erro -->
        <item name="errorTextColor">@color/md_theme_light_error</item>
        <!-- tipografia do erro -->
        <item name="errorTextAppearance">@style/TextAppearance.ObrasApp.Error</item>

        <!-- cor do helper -->
        <item name="helperTextTextColor">@color/md_theme_light_secondary2</item>
        <!-- tipografia do helper -->
        <item name="helperTextTextAppearance">@style/TextAppearance.ObrasApp.Helper</item>
    </style>

    <style name="TextAppearance.ObrasApp.Helper" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_family</item>
    </style>

    <style name="TextAppearance.ObrasApp.Error" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item><item name="fontFamily">@font/inter_family</item>

    </style>

    <!-- TextInputEditText style -->
    <style name="Widget.ObrasApp.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">@dimen/til_edit_min_height</item>
        <item name="android:paddingVertical">@dimen/til_edit_padding_v</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <!--  Menu/ Toolbar icons -->
    <style name="TextAppearance.ObrasApp.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/inter_family</item>
    </style>

    <style name="ThemeOverlay.ObrasApp.Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="android:colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="android:textColorPrimary">@color/md_theme_light_onPrimary</item>
    </style>


    <!-- Tabs (Padrão) -->
    <style name="Widget.ObrasApp.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/md_theme_light_primary</item>
        <item name="tabTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_primary</item>
        <item name="tabTextAppearance">@style/TextAppearance.ObrasApp.Tab</item>
    </style>

    <style name="TextAppearance.ObrasApp.Tab" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_family</item>
    </style>

    <!-- Estilo alternativo com texto menor -->
    <style name="Widget.ObrasApp.TabLayout.Min" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/md_theme_light_primary</item>
        <item name="tabTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_primary</item>
        <item name="tabTextAppearance">@style/TextAppearance.ObrasApp.Tab.Min</item>
    </style>

    <style name="TextAppearance.ObrasApp.Tab.Min" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_family</item>
    </style>


    <!-- Imagem Login-->
    <style name="ShapeAppearanceOverlay.ObrasApp.Hero" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <!-- Material Alert Dialog -->
    <style name="ThemeOverlay.ObrasApp.FuncDialog"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">

        <!-- Cor do check/toggle do multi-choice -->
        <item name="colorControlActivated">@color/md_theme_light_tertiary</item>
        <!-- ajuda em devices mais novos / componentes que usam Secondary -->
        <item name="colorSecondary">@color/md_theme_light_tertiary</item>
    </style>


    <style name="TextAppearance.ObrasApp.TitleMedium18" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
    </style>

</resources>